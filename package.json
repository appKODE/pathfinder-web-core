{
  "name": "@kode-frontend/pathfinder-web-core",
  "version": "1.1.1",
  "description": "Core libs for tool to change environments on the fly",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "prepublish": "npm run build && npm run test",
  "scripts": {
    "dev": "webpack --env development --watch",
    "build": "webpack --env production",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage --collectCoverageFrom='./src/**'",
    "release": "release-it",
    "prepublish": "npm run test && npm run build",
    "prepare": "husky install",
    "pre-commit": "git-format-staged -f 'prettier --ignore-unknown --stdin --stdin-filepath \"{}\"' ."
  },
  "repository": {
    "url": "git@https://github.com/appKODE/pathfinder-web-core",
    "type": "git"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "author": "KODE",
  "contributors": [
    "KODE frontend team"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appKODE/pathfinder-web-core/issues"
  },
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "issueUrlFormat": "https://github.com/appKODE/pathfinder-web-core/issues/{{id}}"
        },
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}",
      "requreCleanWorkDir": false,
      "requreUpstream": false,
      "commitMessage": "chore(release): v${version}",
      "push": true
    },
    "gitlab": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "homepage": "https://github.com/appKODE/pathfinder-web-core",
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@release-it/conventional-changelog": "^4.2.2",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "babel-loader": "8.2.2",
    "eslint": "7.19.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-webpack-plugin": "2.4.3",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^12.4.1",
    "prettier": "2.6.2",
    "react": "17.0.1",
    "release-it": "^14.14.2",
    "ts-loader": "8.0.14",
    "typescript": "4.1.3",
    "webpack": "5.19.0",
    "webpack-cli": "4.4.0"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
